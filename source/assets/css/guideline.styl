@import 'stylus/_mixins'
@import 'stylus/_grid'
@import 'stylus/guideline/_typography'
@import 'stylus/guideline/_colors'

body
	background $gl-color-gray-6

:root
	padding $gutters(3) $gutters(1) $gutters(1)
	transition padding .2s ease

	&.gl-nav-active
		padding $gutters(3) $gutters(1) $gutters(1) (200px + $gutters(1))

		.gl-menu
			background $gl-color-base-1
			color $gl-color-base-2
			left 200px + $gutters(1)

			&:hover
				background $gl-color-base-2
				color $gl-color-base-1

		.gl-nav
			left 0

// #########################

.gl-colors, .gl-typography, .gl-typography-icons, .gl-gs-example, .gl-nav
	font-size 0

.gl-colors > span, .gl-typography-icons > span, .gl-example:before, .gl-comment, .gl-example > .menu, .gl-example > .menu-item, .gl-link, .gl-menu
	font-size 1rem

.gl-wrapper
	display none
	margin 0 0 10px

	&.active
		display block

.gl-menu, .gl-link
	background $gl-color-base-2
	border 0
	color $gl-color-base-1
	line-height 2rem
	outline none

	&:hover
		background $gl-color-base-1
		color $gl-color-base-2

// #########################

.gl-menu
	border solid 1px $gl-color-base-2
	position fixed
	left $gutters(1)
	top 0
	transition background .3s ease, color .3s ease, left .2s ease
	z-index 9999

// #########################

.gl-nav
	background-color $gl-color-gray-6
	background-image $gl-bg-stage
	background-size 10px 10px
	background-position 0 0, 5px 5px
	bottom 0
	left -200px
	overflow-y auto
	position fixed
	top 0
	transition left .2s ease
	width 200px

	.gl-link
		display block
		text-align left
		transition background .3s ease, color .3s ease
		width 100%

		span
			display block

			&:before
				background $gl-color-base-1
				border solid 1px $gl-color-base-2
				border-radius 50%
				content ""
				display inline-block
				height 7px
				margin 0 8px 0 0
				vertical-aling middle
				transition background .2s ease
				width 7px

		&.active

			span

				&:before
					background $gl-color-success

				&:hover

					&:before
						border-color $gl-color-base-1

// #########################

.gl-comment
	background $gl-color-base-1
	border-top $gl-border-config
	line-height 1.5rem
	margin 0
	padding .5rem
	position relative
	z-index 1

// #########################

.gl-example
	border solid 1px $gl-color-base-2
	margin 40px -1px 20px
	position relative

	&:before
		content attr(data-gl)
		display block
		left 30px
		position absolute
		top -20px

	&.gl-exemple-full
		border-left 0
		border-right 0
		margin 40px -14px 20px

	&.gl-typography
		border 0

	&.menu-active

		.gl-example-controls
				background $gl-color-base-2
				border-bottom solid 1px $gl-color-base-2

			.menu
				background $gl-color-base-1
				color $gl-color-base-2

				&:before
					content "-"

				&:hover
					background $gl-color-base-2
					color $gl-color-base-1

			.menu-item

				&.background, &.comment, &.code, &.grid
					display inline-block

	&.gl-stage
		background-color $gl-color-gray-6
		background-image $gl-bg-stage
		background-size 10px 10px
		background-position 0 0, 5px 5px

		.gl-example-controls

			.background
				background $gl-color-base-1
				color $gl-color-base-2

				&:hover
					background $gl-color-base-2
					color $gl-color-base-1

	&.comment-active

		.gl-example-controls

			.comment
				background $gl-color-base-1
				color $gl-color-base-2

				&:hover
					background $gl-color-base-2
					color $gl-color-base-1

		.gl-comment
			display block

	.gl-comment
		display none

	&.code-active

		.gl-example-controls

			.code
				background $gl-color-base-1
				color $gl-color-base-2

				&:hover
					background $gl-color-base-2
					color $gl-color-base-1

		.gl-code
			display block

	.gl-code
		display none

	&.gl-grid

		&:after
			background-image linear-gradient(90deg, rgba(255, 0, 0, .10) $column, transparent $gutters(1))
			background-size $columns(1) $gutters(1)
			bottom 0
			content ""
			display block
			left 0
			position absolute
			right 0
			top 0
			z-index 0

		.gl-example-controls

			.grid
				background $gl-color-base-1
				color $gl-color-base-2

				&:hover
					background $gl-color-base-2
					color $gl-color-base-1

// #########################

.gl-example-controls
	font-size 0
	position relative
	z-index 1

	> .menu, > .menu-item
		background $gl-color-base-2
		color $gl-color-base-1
		cursor pointer
		display inline-block
		font-size 1rem
		transition background .3s ease, color .3s ease

		&:hover
			background $gl-color-base-1
			color $gl-color-base-2

	> .menu
		border solid 1px $gl-color-base-2
		left -1px
		line-height 1rem
		padding 5px
		position absolute
		top -24px

		&:before
			content "+"

	> .menu-item
		line-height 15px
		margin 0 $gutters(1) 0 0
		padding 5px 0
		text-align center
		width 80px

		&.background, &.comment, &.code, &.grid
			display none

// #########################

.gl-gs-example

	.gl-gs-wrapper
		margin 0 0 $gutters(1)
		overflow hidden
		white-space nowrap

		&:last-child
			margin 0

	.gl-col
		background $gl-gradient
		box-sizing border-box
		color $gl-color-base-1
		display inline-block
		font-size 10px
		line-height 10px
		margin 0 $gutters(1) 0 0
		padding $gutters(.5)

	.gl-column
		margin 0 $gutters(1) 0 0
		width $column

		&:before
			content "" + $column

	.gl-viewport-smart
		width $smart //$columns(5)

		&:before
			content ">>> @media min-width = " + $smart + " - smartphone"

	.gl-viewport-smart-to-tablet
		width $smart-to-tablet //$columns(10)

		&:before
			content "<<< @media max-width = " + $smart-to-tablet + " - smartphone"

	.gl-viewport-tablet
		width $tablet //$columns(10)

		&:before
			content ">>> @media min-width = " + $tablet + " - tablet"

.gl-viewport-tablet-to-notebook
		width $tablet-to-notebook //$columns(15)

		&:before
			content "<<< @media max-width = " + $tablet-to-notebook + " - tablet"

.gl-viewport-notebook
		width $notebook //$columns(15)

		&:before
			content ">>> @media min-width = " + $notebook + " - notebook"

	.gl-viewport-notebook-to-desktop
		width $notebook-to-desktop //$columns(20)

		&:before
			content "<<< @media max-width = " + $notebook-to-desktop + " - notebook"

	.gl-viewport-desktop
		width $desktop //$columns(20)

		&:before
			content ">>> @media min-width = " + $desktop + " - desktop"

	.gl-viewport-desktop-to-desktop-large
		width $desktop-to-desktop-large //$columns(25)

		&:before
			content "<<< @media max-width = " + $desktop-to-desktop-large + " - desktop"

	.gl-viewport-desktop-large
		width $desktop-large //$columns(25)

		&:before
			content ">>> @media min-width = " + $desktop-large + " - desktop large"

	.gl-viewport-desktop-large-to-full-hd
		width $desktop-large-to-full-hd //$columns(30)

		&:before
			content "<<< @media max-width = " + $desktop-large-to-full-hd + " - desktop large"

	.gl-viewport-full-hd
		width $full-hd //$columns(30)

		&:before
			content ">>> @media min-width = " + $full-hd + " - full hd"

// #########################

.gl-colors

	.gl-color
		background-color $gl-color-base-1
		background-image $gl-bg-stage
		background-size 10px 10px
		background-position 0 0, 5px 5px
		border solid 1px $gl-color-base-2
		display inline-block
		margin 0 $gutters(1) $gutters(1) 0

		&:before, &:after
			background $gl-color-base-1
			display block
			padding $gutters(.5)

		&:before
			content "" attr(data-sass)

		&:after
			content "" attr(data-color)

		.gl-color-box
			background transparent
			display block
			height 50px
			min-width $columns(4)

		&.gl-color-base-1

			.gl-color-box
				background $gl-color-base-1

		&.gl-color-base-2

			.gl-color-box
				background $gl-color-base-2

		&.gl-color-base-3

			.gl-color-box
				background $gl-color-base-3

		&.gl-color-gray-1

			.gl-color-box
				background $gl-color-gray-1

		&.gl-color-gray-2

			.gl-color-box
				background $gl-color-gray-2

		&.gl-color-gray-3

			.gl-color-box
				background $gl-color-gray-3

		&.gl-color-gray-4

			.gl-color-box
				background: $gl-color-gray-4

		&.gl-color-gray-5

			.gl-color-box
				background $gl-color-gray-5

		&.gl-color-gray-6

			.gl-color-box
				background $gl-color-gray-6

		&.gl-color-overlay

			.gl-color-box
				background $gl-color-overlay

		&.gl-color-alert

			.gl-color-box
				background $gl-color-alert

		&.gl-color-error

			.gl-color-box
				background $gl-color-error

		&.gl-color-success

			.gl-color-box
				background $gl-color-success

// #########################



// #########################

.gl-typography-icons
	border 0

	&:before
		left 0

	span
		background $gl-color-base-1
		box-sizing border-box
		color $gl-color-gray-4
		display inline-block
		line-height 2rem
		margin 0 $gutters(1) $gutters(1) 0
		min-width $columns(4)
		padding 0 $gutters(1)
		vertical-align top

		&:before
			background $gl-color-base-2
			color $gl-color-base-1
			display block
			font-family $font-icons
			font-size 50px
			line-height 100px
			margin 0 $gutters(-1)
			text-align center

		&:after
			content " %" attr(class)

// #########################

.gl-mockup-more
	background $gl-color-base-2
	border $gl-border-config
	color $gl-color-base-1
	cursor pointer
	display inline-block
	font-size 1rem
	left -20px
	line-height 10px
	margin 0
	padding 0
	position absolute
	text-align center
	transition background .3s ease
	top 0
	width 10px

	&:before
		content "+"

.gl-wrapper-mockup-links
	font-size 0
	list-style none
	padding 0 0 0 20px

	li
		margin: 0 0 1rem
		position: relative

		.gl-mockup-more-controler
			display none

			&:checked ~ .gl-mockup-more
				background $gl-color-base-1
				color $gl-color-base-2
				transition background .3s ease

				&:before
					content "-"

			&:checked ~ .gl-wrapper-mockup-links
				display block

		.gl-wrapper-mockup-links
			display none
			margin $gutters(.5) 0
			padding 0 0 0 $gutters(1)

			li
				margin 0

		.gl-mockup-links
			color $gl-color-base-2
			font-size 1rem
			line-height $gutters(1)
			text-decoration none

			&:hover
				text-decoration underline

			&[href="#"], &[href=""]
				color $gl-color-error

