// icomoon.io
@font-face
	font-family $font-icons
	src url("data:application/x-font-ttf;charset=utf-8;base64,") format("truetype")
	font-weight normal
	font-style normal

$font-icon
	font-family $font-icons
	speak none
	font-style normal
	font-weight normal
	font-variant normal
	text-transform none
	line-height 1
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

$ic-sitemap1
	@extend $font-icon
	content "\e607"

$ic-anchor
	@extend $font-icon
	content "\e600"

$ic-dropper
	@extend $font-icon
	content "\e601"

$ic-file
	@extend $font-icon
	content "\e602"

$ic-fountainpencopy
	@extend $font-icon
	content "\e603"

$ic-layout12
	@extend $font-icon
	content "\e604"

$ic-link
	@extend $font-icon
	content "\e605"

$ic-ruler2
	@extend $font-icon
	content "\e606"

$ic-menu
	@extend $font-icon
	content "\e9bd"

.ic-sitemap1

	&:before
		@extend $ic-sitemap1

.ic-anchor

	&:before
		@extend $ic-anchor

.ic-dropper

	&:before
		@extend $ic-dropper

.ic-file

	&:before
		@extend $ic-file

.ic-fountainpencopy

	&:before
		@extend $ic-fountainpencopy

.ic-layout12

	&:before
		@extend $ic-layout12

.ic-link

	&:before
		@extend $ic-link

.ic-ruler2

	&:before
		@extend $ic-ruler2

.ic-menu

	&:before
		@extend $ic-menu

