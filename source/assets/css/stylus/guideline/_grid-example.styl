// Grid example
.gl-gs-example
	font-size 0

	.gl-gs-wrapper
		margin 0 0 $gutters(1)
		overflow hidden
		white-space nowrap

		&:last-child
			margin 0

	.gl-col
		background $gl-gradient
		box-sizing border-box
		color $gl-color-base-1
		display inline-block
		font-size 10px
		line-height 10px
		margin 0 $gutters(1) 0 0
		padding $gutters(.5)

	.gl-column
		margin 0 $gutters(1) 0 0
		width $column

		&:before
			content "" + $column

	.gl-viewport-smart
		width $smart //$columns(5)

		&:before
			content ">>> @media min-width = " + $smart + " - smartphone"

	.gl-viewport-smart-to-tablet
		width $smart-to-tablet //$columns(10)

		&:before
			content "<<< @media max-width = " + $smart-to-tablet + " - smartphone"

	.gl-viewport-tablet
		width $tablet //$columns(10)

		&:before
			content ">>> @media min-width = " + $tablet + " - tablet"

.gl-viewport-tablet-to-notebook
